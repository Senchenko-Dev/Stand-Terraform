[Unit]
Description=Zookeeper service
After=local-fs.target network.service


[Service]
WorkingDirectory={{ kafka_install_dir }}
Type=simple
User={{ kafka_user }}
Group={{ kafka_user }}
ExecStart={{ kafka_install_dir }}/bin/zookeeper-server-start  {{ kafka_install_dir }}/etc/kafka/zookeeper.properties
ExecStop={{ kafka_install_dir }}/bin/zookeeper-server-stop
LimitNOFILE=512000
LimitNPROC=512000
Restart=on-failure
RestartSec=30


[Install]
WantedBy=default.target
